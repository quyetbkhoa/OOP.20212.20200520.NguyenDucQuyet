import hust.soict.dsai.aims.cart.Cart;
import hust.soict.dsai.aims.disc.DigitalVideoDisc;

public class Store {
	public static final int MAX_ITEMS = 40;
	private DigitalVideoDisc itemsInStore[]= new DigitalVideoDisc[MAX_ITEMS];
	private int numberOfDisc = 0;
	public void addDVD (DigitalVideoDisc ... dvds) {
		if (this.numberOfDisc + dvds.length <= Store.MAX_ITEMS) {
			for (int i = 0; i < dvds.length; i++) {
				this.itemsInStore[this.numberOfDisc + i] = dvds[i];
				}
			this.numberOfDisc += dvds.length;
			System.out.println("The list has been added");
			}
		else {System.out.println("There are not enough empty slot");
		}
		}
		
	}
