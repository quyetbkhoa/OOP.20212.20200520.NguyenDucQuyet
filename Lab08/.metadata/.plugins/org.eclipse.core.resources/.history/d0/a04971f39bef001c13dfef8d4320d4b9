package hust.soict.dsai.aims.screen;

import java.awt.GridLayout;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

import javax.swing.JButton;
import javax.swing.JLabel;
import javax.swing.JTextField;

import hust.soict.dsai.aims.cd.CompactDisc;
import hust.soict.dsai.aims.store.Store;

public class AddCompactDiscToStoreScreen extends AddItemToStoreScreen{
	private Store store = super.getStore();
	private String artist;
	private String director;
	public AddCompactDiscToStoreScreen(Store store) {
		this.store = store;
		cp.setLayout(new GridLayout(3,2));
		this.title();
		this.category();
		
		this.cost();
		
		this.artist();
		this.director();
		
		CompactDisc cd = this.createCD();
		
		submitButton(cd);
		setTitle("check");
		setSize(400, 120);
		setVisible(true);
	}
	public void artist() {
		JTextField tfInput;
		cp.add(new JLabel("Enter Title: "));		
		tfInput= new JTextField(10);
		cp.add(tfInput);
		tfInput.addActionListener( new ActionListener() {
			@Override
			public void actionPerformed(ActionEvent e) {
//			    if(e.getActionCommand().equals("Add book")) {
				artist= tfInput.getText();
//			    } 
			  }
		}
				);
	}
	public void director() {
		JTextField tfInput;
		cp.add(new JLabel("Enter Title: "));		
		tfInput= new JTextField(10);
		cp.add(tfInput);
		director= tfInput.getText();
		tfInput.addActionListener( new ActionListener() {
			@Override
			public void actionPerformed(ActionEvent e) {
//			    if(e.getActionCommand().equals("Add book")) {
				director= tfInput.getText();
//			    } 
			  }
		}
				);
	}
	public CompactDisc createCD() {
		CompactDisc cd = new CompactDisc(super.getTitle(), super.getCategory(), artist, director, super.getCost());
		return cd;
	}
	public void submitButton(CompactDisc cd) {
		JButton button = new JButton("Test Button");
		cp.add(button);
		button.addActionListener( new ActionListener() {
			@Override
			public void actionPerformed(ActionEvent e) {
//			    if(e.getActionCommand().equals("Add book")) {
				
//			    } 
				AddCompactDiscToStoreScreen.this.store.addMedia(cd);
				dispose();
			}
		});	
	}
}
