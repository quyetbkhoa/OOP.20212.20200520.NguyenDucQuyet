package hust.soict.dsai.aims.screen;

import java.awt.GridLayout;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

import javax.swing.JButton;
import javax.swing.JLabel;
import javax.swing.JTextField;

import hust.soict.dsai.aims.book.Book;
import hust.soict.dsai.aims.cd.CompactDisc;

public class AddBookToStoreScreen extends AddItemToStoreScreen {
	private String author;
	private int length;
	public AddBookToStoreScreen() {
		cp.setLayout( new GridLayout(3,2));
		this.title();
		this.category();
		
		this.cost();
		this.author();
		this.length();
		setTitle("check");
		setSize(400, 120);
		setVisible(true);
	}
	public void author() {
		JTextField tfInput;
		cp.add(new JLabel("Enter artist: "));		
		tfInput= new JTextField(10);
		cp.add(tfInput);
		tfInput.addActionListener( new ActionListener() {
			@Override
			public void actionPerformed(ActionEvent e) {
//			    if(e.getActionCommand().equals("Add book")) {
				author= tfInput.getText();
//			    } 
			  }
		}
				);
	}
	public void length() {
		JTextField tfInput;
		cp.add(new JLabel("Enter artist: "));		
		tfInput= new JTextField(10);
		cp.add(tfInput);
		tfInput.addActionListener( new ActionListener() {
			@Override
			public void actionPerformed(ActionEvent e) {
//			    if(e.getActionCommand().equals("Add book")) {
				length= Integer.parseInt(tfInput.getText());
//			    } 
			  }
		}
				);
	}
	public Book createBook() {
		Book book = new Book(super.getTitle(), super.getCategory(), super.getCost(), author, length);
		return book;
	}
	public void submitButton() {
		JButton button = new JButton("Test Button");
		cp.add(button);
		button.addActionListener( new ActionListener() {
			@Override
			public void actionPerformed(ActionEvent e) {
//			    if(e.getActionCommand().equals("Add book")) {
				CompactDisc cd = createCD();
//			    } 
				AddCompactDiscToStoreScreen.this.store.addMedia(cd);
				new StoreManagerScreen(AddCompactDiscToStoreScreen.this.store);
			}
		});	
	}
}
