	Container cp= getContentPane();
	public AddItemToStoreScreen() {
		
		cp.setLayout( new GridLayout(3,2));
		
		this.title();

		this.category();
		
		this.cost();
		
		setTitle("check");
		setSize(400, 120);
		setVisible(true);
		
	}
	public void title() {
		JTextField tfInput;
		cp.add(new JLabel("Enter Title: "));		
		tfInput= new JTextField(10);
		cp.add(tfInput);
		tfInput.addActionListener( new ActionListener() {
			@Override
			public void actionPerformed(ActionEvent e) {
//			    if(e.getActionCommand().equals("Add book")) {
				title= tfInput.getText();
				System.out.println(title);
//			    } 
			  }
		}
				);
	}
	public void category() {
		cp.add(new JLabel("Enter category : "));		
		tfInput1= new JTextField(10);
		cp.add(tfInput1);
		tfInput1.addActionListener( new ActionListener() {
			@Override
			public void actionPerformed(ActionEvent e) {
//			    if(e.getActionCommand().equals("Add book")) {
				category= tfInput1.getText();
				System.out.println(category);
//			    } 
			  }
		}
				);
	}
	public void cost() {

		cp.add(new JLabel("Enter cost : "));		
		tfInput2= new JTextField(10);
		cp.add(tfInput2);
		tfInput2.addActionListener( new ActionListener() {
			@Override
			public void actionPerformed(ActionEvent e) {
//			    if(e.getActionCommand().equals("Add book")) {
				cost = Float.parseFloat(tfInput.getText());
				System.out.println(cost);
//			    } 
			  }
		}
				);
	}
